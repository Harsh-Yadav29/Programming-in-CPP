// Decimal to Binary number conversion

#include <iostream>
#include <math.h>
using namespace std;

int main() {
	int n;
	cin >> n;
	int ans = 0;
	int i = 0;
	while(n != 0){
	    int bit = n & 1;
	    n = n >> 1;
	    ans = (bit * pow(10,i)) + ans;     //Formula used:  ans = (digit * 10**i) + ans  (initial value of ans = 0 and i = 0)
	    i++;
	}
	cout << ans;
	return 0;
}
