// Initialize all elements of an array with the same value.

#include <iostream>
using namespace std;

int main() {
	int arr[100] = {0};
	
	fill_n(arr,100,25);      // fill_n(arr, arr_size, value)  
	
	for(int i = 0; i < 100; i++){
	    cout << arr[i] << " ";
	}
	return 0;
}

Or you can use loop also to initialize an array.


#include <iostream>
using namespace std;

int main() {
    int size;
    cin >> size;
    int arr[25] = {0};
    int sum = 0;
    
    for(int i = 0; i < size; i++){
        cin >> arr[i];
    }
    
    for(int i = 0; i < size; i++){
        sum = sum + arr[i];
    }
    
    cout << "Sum of all elements in an array is " << sum;
	return 0;
}
