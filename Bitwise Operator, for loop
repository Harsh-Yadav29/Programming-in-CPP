// Bitwise opwrator works on bit level, it first converts the given values to binary and then performs the operation.

// First 10 Fibonacci numbers implemention using for loop.

#include <iostream>
using namespace std;

int main() {
	int a = 0, b = 1, c;
	cout << a << " " << b << " ";
	for(int i = 1; i <= 10; i++){
	    c = a + b;                   // to find any tern of fibonacci series we need the formula:  n = f(n-1) + f(n-2)
 	    cout << c << " ";
	    a = b;
	    b = c;
	}
	
    return 0;
}
